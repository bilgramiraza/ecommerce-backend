<main>
  <h2 class="my-4">{{title}}</h2>
  <form action="" method="POST">
    <div>
      <label for="name">Product Name: </label>
      <input 
        type="text" 
        id="name" 
        name="name"
        required="true"
        {{#if name}}
          value={{name}}
        {{/if}}
      >
    </div>
    <div>
      <label for="description">Product Description</label>
      <textarea 
        id="description" 
        name="description"
        required="true"
     >{{#if description}}{{description}}{{/if}}</textarea>
    </div>
    <div>
      <label for="sku">Product SKU: </label>
      <input 
        type="text" 
        id="sku" 
        name="sku"
        required="true"
        {{#if SKU}}
          value={{SKU}}
        {{/if}}
      >
    </div>
    <div>
      <label for="category">Product Category: </label>
      <select
        id="category" 
        name="category"
        placeholder="Select Category"
        required="true"
      >
      {{#each categories}}
        <option 
          value={{this._id}}
          {{#selected ../category this._id}}
            selected="selected" 
          {{/selected}}
          > 
          {{{this.name}}}
        </option>  
      {{/each}}
      </select>
    </div>
    <div>
      <label for="quantity">Product Quantity: </label>
      <input 
        type="number" 
        id="quantity" 
        name="quantity"
        required="true"
        {{#if quantity}}
          value={{quantity}}
        {{/if}}
      >
    </div>
    <div>
      <label for="price">Product Price: </label>
      <input 
        type="text" 
        id="price" 
        name="price"
        required="true"
        {{#if price}}
          value={{price}}
        {{/if}}
      >
    </div>
    <button type="submit">Submit</button>
  </form>
  {{#if error}}
    <ul>
      {{#each error}}
      <p>{{this.msg}}</p>
      {{/each}}
    </ul>
  {{/if}}
</main>
